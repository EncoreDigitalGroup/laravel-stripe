        "postinstall": "npm run json:sort"
    },
    "devDependencies": {
        "@stripe/stripe-js": "^5.6.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.13.5",
        "axios": "^1.7.9",
        "esbuild": "^0.25.0",
        "json-sort-cli": "^4.0.4",
        "typescript": "^5.6.3"
    }
}
